<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xueyuan"
    tools:context=".stageActivities.FirstStageActivity">

    <com.example.lonelywolf.grid.MyGridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/mpText"/>

    <ImageButton
        android:id="@+id/button_cancel"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/cancelbutton"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/faqiuicon1" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/goforward" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:background="@drawable/xuanfengicon" />

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="240dp"
        android:background="@drawable/sprinticon" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ghoststrikeicon"
        android:layout_marginStart="320dp"
        android:layout_alignParentBottom="true"
        />

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/fenghuangicon"
        android:layout_marginStart="400dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>