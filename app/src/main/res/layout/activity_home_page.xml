<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">



    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        />

    <ImageView
        android:id="@+id/title"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/title"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_alignStart="@id/help"
        android:text="开始游戏/Start Game"
        android:textAllCaps="false"
        android:backgroundTint="#A0A4BD"
        tools:ignore="HardcodedText,MissingConstraints"
        />

    <Button
        android:id="@+id/help"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#A0A4BD"
        android:text="帮助/Help"
        android:textAllCaps="false"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/more"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/help"
        android:layout_alignStart="@id/help"
        android:text="更多/More"
        android:textAllCaps="false"
        android:backgroundTint="#A0A4BD"
        tools:ignore="HardcodedText,MissingConstraints" />

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:id="@+id/helpView"
        android:visibility="invisible"
        android:background="@drawable/duihuakuang">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close"
            android:id="@+id/close"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/helpText"
            android:text="@string/_8"
            android:gravity="center"
            android:layout_margin="30dp"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:id="@+id/moreView"
        android:visibility="invisible"
        android:background="@drawable/duihuakuang">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close"
            android:id="@+id/close_more"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/moreText"
            android:gravity="center"
            android:layout_margin="30dp"
            android:textSize="30dp"/>

    </RelativeLayout>

</RelativeLayout>